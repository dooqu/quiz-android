<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSubjectTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:background="#cecfff"
        android:text="" />
    <TextView
        android:id="@+id/tvOption0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="#efefef"
        android:gravity="center_vertical"
        android:layout_below="@id/tvSubjectTitle"
        android:text="" />
    <TextView
        android:id="@+id/tvOption1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="#efefef"
        android:gravity="center_vertical"
        android:layout_below="@id/tvOption0"
        android:text="" />
    <TextView
        android:id="@+id/tvOption2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="#efefef"
        android:gravity="center_vertical"
        android:layout_below="@id/tvOption1"
        android:text="" />
    <TextView
        android:id="@+id/tvOption3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="#efefef"
        android:gravity="center_vertical"
        android:layout_below="@id/tvOption2"
        android:text="" />
    <TextView
        android:id="@+id/tvOption4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="#efefef"
        android:gravity="center_vertical"
        android:layout_below="@id/tvOption3"
        android:text="" />
    <TextView
        android:id="@+id/tvUserASRResult"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="#c0c0c0"
        android:gravity="center"
        android:layout_below="@id/tvOption4"
        android:text="" />

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvUserASRResult"
        android:text="开始新的比赛" />



</RelativeLayout>